<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme is the default theme. -->
    <style name="MyTheme" parent="android:Theme">
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>

        <item name="android:windowTitleSize">@dimen/actionbar_compat_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/ActionBarCompat</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>

        <!-- for programmatic instantiation -->
        <item name="actionbarCompatTitleStyle">@style/ActionBarCompatTitle</item>
        <item name="actionbarCompatItemStyle">@style/ActionBarCompatItem</item>
        <item name="actionbarCompatItemHomeStyle">@style/ActionBarCompatHomeItem</item>
        <item name="actionbarCompatProgressIndicatorStyle">@style/ActionBarCompatProgressIndicator
        </item>
    </style>

    <style name="MyDefaultTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@drawable/text_color</item>
    </style>

    <!-- predefined colors -->

    <drawable name="text_color">@color/actionbar_title_color</drawable>

    <style name="OOScreen">
        <item name="android:background">@drawable/bg_screen_content</item>
    </style>

    <!-- Universal container styles -->

    <style name="OOUniCont">
        <item name="android:layout_marginTop">@dimen/cont_margin</item>
        <item name="android:layout_marginLeft">@dimen/cont_margin</item>
        <item name="android:layout_marginRight">@dimen/cont_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/xml_bg_list_item</item>
        <item name="android:padding">@dimen/cont_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
    </style>

    <style name="OOUniContNoMargin" parent="OOUniCont">
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
    </style>

    <style name="OOUniContWholePage" parent="OOUniCont">
        <item name="android:layout_marginBottom">@dimen/cont_margin</item>
    </style>

    <!-- Profile info styles -->

    <style name="OOProfileInfoCont" parent="OOUniCont">
        <item name="android:textSize">@dimen/profile_info_text_size</item>
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
    </style>

    <style name="OOProfileInfoTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
        <item name="android:textSize">@dimen/profile_info_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OOProfileInfoData">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/profile_info_data_margin_top</item>
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
    </style>

    <!-- Form submit button -->

    <!-- List view -->

    <!-- Thumbnail style -->

    <style name="OOThumbTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:textSize">@dimen/thumb_title_font_size</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
    </style>

    <!-- Home button styles -->


    <style name="OOHomeButtonBubble" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/home_button_bubble_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/home_button_bubble_text_size</item>
        <item name="android:textColor">@color/home_button_bubble_text_color</item>
        <item name="android:background">@drawable/bg_bubble</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:paddingTop">@dimen/home_button_bubble_padding_top</item>
        <item name="android:paddingBottom">@dimen/home_button_bubble_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/home_button_bubble_padding_left</item>
        <item name="android:paddingRight">@dimen/home_button_bubble_padding_right</item>
        <item name="android:layout_marginTop">@dimen/home_button_bubble_padding_left</item>
        <item name="android:layout_marginRight">@dimen/home_button_bubble_padding_left</item>
    </style>


    <!-- ActionBar styles -->

    <style name="ActionBarCompat">
        <item name="android:background">@drawable/bg_striped</item>
    </style>

    <style name="ActionBarCompatItemBase">
        <!-- layout_width/height must be set in code -->
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/actionbar_compat_item</item>
    </style>

    <style name="ActionBarCompatProgressIndicator" parent="android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ActionBarCompatTitleBase">
        <item name="android:id">@id/actionbar_compat_title</item>
        <!-- layout_width/height/weight must be set in code -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/actionbar_compat_title_text_size</item>
        <item name="android:paddingLeft">@dimen/actionbar_compat_title_padding_left</item>
        <item name="android:paddingRight">@dimen/actionbar_compat_title_padding_right</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="ActionBarCompatTitle" parent="@style/ActionBarCompatTitleBase">
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>

    <style name="ActionBarCompatItem" parent="@style/ActionBarCompatItemBase"></style>

    <style name="ActionBarCompatHomeItem" parent="@style/ActionBarCompatItemBase">
        <item name="android:paddingLeft">@dimen/actionbar_compat_button_home_padding_left</item>
    </style>


    <style name="InputTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryLightDark</item>
        <item name="android:paddingLeft">@dimen/dim_input_field_padding_left</item>
        <item name="android:paddingRight">@dimen/dim_input_field_padding_right</item>
        <item name="android:baselineAlignBottom">true</item>
        <item name="android:textSize">@dimen/input_title_text_size</item>
        <item name="fontPath">@string/font_roboto_medium</item>
    </style>

    <style name="InputBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/inputbox_bg</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColorHint">@color/colorPrimaryInvert</item>
        <item name="android:textColor">@color/colorPrimaryInvert</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="fontPath">@string/font_roboto_regular</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:textSize">@dimen/home_icons_size</item>-->
        <item name="fontPath">@string/font_roboto_medium</item>
    </style>

    <style name="NewDialog"  parent="android:Theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>    <!--<style name="DialogAnimation">
		<item name="android:windowEnterAnimation">@anim/slid_up_dialog</item>
		<item name="android:windowExitAnimation">@anim/slid_out_down</item>
	</style>
	<style name="PauseDialogAnimation">
		<item name="android:windowEnterAnimation">@anim/glass_view_in</item>
		<item name="android:windowExitAnimation">@anim/glass_view_out</item>
	</style>-->


    <!--new theme-->    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="android:textColorPrimary">@color/colorPrimaryInvert</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:textColorSecondary">@color/colorPrimaryDark</item>

    <item name="android:textStyle">normal</item>
    <item name="colorControlNormal">@color/colorPrimaryInvert</item>
    <item name="colorControlHighlight">@color/colorPrimaryDark</item>

    <!--
        <item name="actionButtonStyle">@style/ActionBar.ActionButton</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    -->

    <item name="popupTheme">@style/Toolbar.Popup.theme</item>
    <item name="theme">@style/Toolbar.theme</item>
    <item name="titleTextAppearance">@style/Toolbar.Title</item>
</style>

    <style name="Toolbar.theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryInvert</item>
    </style>


    <style name="Toolbar.Popup.theme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:background">@color/white</item>-->
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textColor">@color/colorPrimaryInvert</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="App.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimaryInvert</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryInvert</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/bg_action_bar</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/bg_action_bar</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppThemeActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryInvert</item>
        <item name="android:textColorPrimary">@color/colorPrimaryInvert</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryInvert</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/App.DrawerArrowToggle</item>
        <item name="colorControlNormal">@color/colorPrimaryInvert</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="radioButtonStyle">@style/radioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/radioButtonStyle</item>
        <item name="android:checkboxStyle">@style/checkBoxStyle</item>
    </style>
    <style name="TextInputLayoutStyle" parent="AppThemeNoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppThemeNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryInvert</item>
        <item name="android:textColorPrimary">@color/colorPrimaryInvert</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColorSecondary">@color/colorPrimaryInvert</item>
        <item name="drawerArrowStyle">@style/App.DrawerArrowToggle</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="radioButtonStyle">@style/radioButtonStyle</item>
        <item name="android:radioButtonStyle">@style/radioButtonStyle</item>
        <item name="android:checkboxStyle">@style/checkBoxStyle</item>

    </style>


    <style name="radioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/ic_radio_selector</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_radio_selector</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <style name="noDataStyle" parent="OOUniCont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/cont_empty_font_size</item>
        <item name="android:textColor">@color/colorPrimaryInvert</item>
        <item name="android:padding">@dimen/cont_empty_padding</item>
        <item name="fontPath">@string/font_roboto_regular</item>
        <item name="android:text">@string/noData</item>
    </style>

    <style name="PageTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimaryInvert</item>
        <item name="fontPath">@string/font_norican_regular</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="PageSubTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/prof_topicons_padding_leftright</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimaryInvert</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1" tools:ignore="NewApi">@dimen/prof_topicons_padding_leftright</item>
    </style>

    <style name="AppTabLayout.Fixed" parent="AppTabLayout">
        <item name="tabMode">fixed</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <!--<item name="tabBackground">@drawable/tab_indicator_color</item>-->
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">#60000000</item>

        <!--<item name="tabIndicatorHeight">4dp</item>-->
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <!--<item name="android:fontFamily">@font/poppins_regular</item>-->
    </style>



</resources>