<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OOScreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/OOUniContWholePage"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent">

        <com.androidapp.instasocial.ui.CompatTextView
            style="@style/InputTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_message"
            android:textAppearance="@style/MyDefaultTextAppearance" />

        <com.androidapp.instasocial.ui.CompatEditText
            style="@style/InputBoxStyle"
            android:id="@+id/status_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>

