    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_reward_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_avatar"
                android:layout_width="@dimen/dim_notify_usr_img_size"
                android:layout_height="@dimen/dim_notify_usr_img_size"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/imagefeed"
                android:layout_width="@dimen/dim_notify_usr_img_size"
                android:layout_height="@dimen/dim_notify_usr_img_size"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/follower_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/profile_avatar"
                android:layout_toRightOf="@+id/profile_avatar"
                android:linksClickable="true"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:text="Richard"
                android:textColor="@color/black"
                android:textColorLink="#000"
                android:textSize="13sp"
                android:visibility="visible" />


            <com.androidapp.instasocial.utils.ExpandableHeightGridView
                android:id="@+id/grid_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_avatar"

                android:layout_toEndOf="@+id/profile_avatar"
                android:layout_toRightOf="@+id/profile_avatar"
                android:horizontalSpacing="1.2dp"
                android:numColumns="5"
                android:verticalSpacing="1dp"/>

        </RelativeLayout>


    </RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->


</RelativeLayout>