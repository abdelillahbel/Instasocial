<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dim_profile_following_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgFollowStatus"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/dim_profile_following_img_size"
            android:layout_height="@dimen/dim_profile_following_img_size" />

        <com.androidapp.instasocial.ui.CompatTextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_profile_following_margin_left"
            android:text="Arora"
            android:textColor="@color/colorPrimaryInvert"
            android:textSize="@dimen/common_txt_size" />
    </LinearLayout>

    <com.androidapp.instasocial.ui.CompatImageView
        android:id="@+id/imgFollowStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dim_profile_following_padding"
        android:src="@drawable/ic_follow"
        app:filterColor="@color/colorPrimary" />

    <com.androidapp.instasocial.ui.CompatTextView
        android:id="@+id/txtYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dim_profile_following_margin_left"
        android:layout_marginRight="@dimen/dim_profile_following_margin_left"
        android:text="You"
        android:textColor="@color/colorPrimaryInvert"
        android:textSize="@dimen/common_txt_size"
        android:visibility="gone" />

</RelativeLayout>